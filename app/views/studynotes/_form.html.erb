<%= simple_form_for studynote, validate: true do |s|  %>
    <%= s.simple_fields_for :pericopes, validate: true do |p| %>
        <%= p.input :name, placeholder: "Genesis 1:1-3:21", autofocus: true %>
    <% end %>
    <%= s.input :title %>
    <%= s.input :note, :input_html => {:rows => 10} %>
    <%= s.button :submit, class: "btn-primary" %>
<% end %>
